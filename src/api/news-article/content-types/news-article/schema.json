{
  "kind": "collectionType",
  "collectionName": "news_articles",
  "info": {
    "singularName": "news-article",
    "pluralName": "news-articles",
    "displayName": "News-Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "coverimage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Tags": {
      "type": "string"
    },
    "Description_in_detail": {
      "type": "richtext"
    },
    "publishedat": {
      "type": "date"
    },
    "similar_articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::news-article.news-article",
      "inversedBy": "news_articles"
    },
    "news_articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::news-article.news-article",
      "inversedBy": "similar_articles"
    },
    "category": {
      "type": "string",
      "default": "news-article",
      "required": true,
      "unique": false
    },
    "hashtags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::hashtag.hashtag",
      "mappedBy": "tags"
    },
    "countries": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::country.country",
      "mappedBy": "news_articles"
    },
    "states": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::state.state",
      "inversedBy": "news_articles"
    },
    "cities": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::city.city",
      "mappedBy": "news_articles"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "news_articles"
    },
    "short_description": {
      "type": "text"
    }
  }
}
